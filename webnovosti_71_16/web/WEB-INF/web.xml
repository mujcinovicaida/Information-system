<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servleti.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registracija</servlet-name>
        <servlet-class>servleti.registracija</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dodajnovost</servlet-name>
        <servlet-class>servleti.dodajnovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>novostiispis</servlet-name>
        <servlet-class>servleti.novostiispis</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>novostispis</servlet-name>
        <servlet-class>servleti.novostispis</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>izmijeninovost</servlet-name>
        <servlet-class>servleti.izmijeninovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obrisinovost</servlet-name>
        <servlet-class>servleti.obrisinovost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pokupiid</servlet-name>
        <servlet-class>servleti.pokupiid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>novostiispisgost</servlet-name>
        <servlet-class>servleti.novostiispisgost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registracija</servlet-name>
        <url-pattern>/registracija</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dodajnovost</servlet-name>
        <url-pattern>/dodajnovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>novostiispis</servlet-name>
        <url-pattern>/novostiispis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>novostispis</servlet-name>
        <url-pattern>/novostispis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>izmijeninovost</servlet-name>
        <url-pattern>/izmijeninovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obrisinovost</servlet-name>
        <url-pattern>/obrisinovost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pokupiid</servlet-name>
        <url-pattern>/pokupiid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>novostiispisgost</servlet-name>
        <url-pattern>/novostiispisgost</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
